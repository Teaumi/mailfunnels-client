<% content_for :javascript do %>
    <script type="text/javascript">
        ShopifyApp.ready(function () {
            ShopifyApp.Bar.initialize({
                icon: '/mailfunnels-logo.jpg'
            });
        });
    </script>


    <%= javascript_include_tag 'datatable_manifest.js' %>
    <%= javascript_include_tag 'pages/broadcasts.js' %>
    <%= stylesheet_link_tag 'dashboard.css' %>


    <div class="hidden">
      <input id="current_app_id" type="number" value="<%= @app.id %>"/>
    </div>

    <div class="col-xs-12">

      <div class="row">
        <div class="col-xs-12">
          <div class="page-title">
            <div class="title_left">
              <h3>MailFunnels <small>Broadcast Info</small></h3>
            </div>

            <div class="title_right">

            </div>

            <hr/>
            <div class="clearfix"></div>
          </div>
        </div>
      </div>

      <hr class="fade-2"/>


      <!-- Start Email Lists Table -->
      <!-- ~~~~~~~~~~~~~~~~~~~~~~~ -->
      <div class="row">

        <div class="col-md-12 col-sm-12 col-xs-12">
          <div class="x_panel">
            <div class="x_title">
              <h2>Broadcasts</h2>
              <div class="clearfix"></div>
            </div>
            <div class="x_content">


            </div>
          </div>
        </div>

      </div>







    </div>


    <div class="row">
      <div class="col-xs-12">

        <div class="row">


          <!--Start Left Side panels-->
          <div class="col-xs-12 col-sm-3 pull-left">

            <div class="x_panel tile">
              <div class="x_title">
                <h2 style="font-size: 20px;">Broadcast Info</h2>
                <div class="clear-fix"></div>
              </div>

              <div class="x_content">
                <h5><b>Name:</b> <%= @broadcast.name %> </h5>
                <h5><b>Description:</b> <%= @broadcast.description %> </h5>

                <h5><b>Created at:</b> <%= @broadcast.created_at %> </h5>
                <h5><b>Email Lists:</b>
                <% @lists.each do |list| %>
                  <%= list.email_list.name %>

                <% end %>
                </h5>

              </div>




            </div>








          </div>
          <!--End Left Side Panels-->


        </div>
      </div>
    </div>


<% end %>