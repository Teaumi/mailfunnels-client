<!DOCTYPE html>
<html lang="en">
<head>
	<meta http-equiv="content-type" content="text/html; charset=utf-8 ;">

	<% application_name = ShopifyApp.configuration.application_name %>

	<!--SHOPIFY EMBEDDED API -->
	<script src="//cdn.shopify.com/s/assets/external/app.js?<%= Time.now.strftime('%Y%m%d%H') %>"></script>

	<script type="text/javascript">
      ShopifyApp.init({
          apiKey: "<%= ShopifyApp.configuration.api_key %>",
          shopOrigin: "<%= "https://#{ @shop_session.url }" if @shop_session %>",
          debug: true,
          forceRedirect: true
      });
	</script>

	<%= stylesheet_link_tag 'application', :media => 'all'%>
	<%= javascript_include_tag 'application'%>

	<!--JQUERY FLOWCHART-->
	<!--<link href="<%= stylesheet_path "jquery.vertical.flowchart.css" %>" rel="stylesheet" type="text/css">-->


	<title>Mail-Funnel</title>

	<%= csrf_meta_tags %>


</head>


<div class="app-wrapper">
	<div class="app-content">
		<main role="main">

			<body class="nav-sm">

			<div id="ajax-messages"></div>

			<div class="container body">

				<div class="main_container">


					<div class="col-md-3 left_col">
						<div class="left_col scroll-view">
							<div class="navbar nav_title" style="border: 0;">
								<a href="<%= root_url %>" class="site_title"><i class="fa fa-envelope-o"></i> <span>MailFunnels</span></a>
							</div>

							<div class="clearfix"></div>

							<br>

							<!-- sidebar menu -->
							<div id="sidebar-menu" class="main_menu_side hidden-print main_menu">
								<div class="menu_section active">
									<h3>General</h3>
									<ul class="nav side-menu" style="">
										<li><a href="<%= root_url %>"><i class="fa fa-home"></i> Home <span class="fa fa-chevron-down"></span></a>
										</li>
										<li><a href="<%= funnel_url %>"><i class="fa fa-edit"></i> Funnel Builder <span class="fa fa-chevron-down"></span></a>
										</li>
										<li><a href="<%= root_url %>campaigns"><i class="fa fa-desktop"></i> Campaigns <span class="fa fa-chevron-down"></span></a>
										</li>
										<li><a href="<%= root_url %>lists"><i class="fa fa-table"></i> Email Lists <span class="fa fa-chevron-down"></span></a>
										</li>
									</ul>
								</div>
							</div>
							<!-- /sidebar menu -->

						</div>
					</div>



					<div class="right_col" role="main" style="min-height: 750px;">
						<div class="col-xs-12">


						<% if content_for?(:javascript) %>
									<%= yield :javascript %>
						<% else %>
								<%= yield %>
						<% end %>

						</div>
					</div>

					<div class="clearfix"></div>


					<footer>
						<div class="pull-right">
							MailFunnels
						</div>
						<div class="clearfix"></div>
					</footer>

				</div>


			</div>


			</body>

		</main>
	</div>
</div>


</html>