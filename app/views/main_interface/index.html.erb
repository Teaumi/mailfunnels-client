<% content_for :javascript do %>
    <script type="text/javascript">
        window.mainPageTitle = 'Main Page';
        ShopifyApp.ready(function () {
            ShopifyApp.Bar.initialize({
                title: window.mainPageTitle,
                icon: '/shopify.png'
            });
        });
    </script>


    <%= javascript_include_tag 'dashboard_manifest' %>
    <%= stylesheet_link_tag 'dashboard.css' %>


    <div class="row">
      <div class="col-md-12">
        <div class="">
          <div class="x_content">
            <div class="row">
              <div class="animated flipInY col-lg-3 col-md-3 col-sm-6 col-xs-12">
                <div class="tile-stats">
                  <div class="icon"><i class="fa fa-users text-info"></i>
                  </div>
                  <div class="count">179</div>

                  <h3>Total Contacts</h3>
                </div>
              </div>
              <div class="animated flipInY col-lg-3 col-md-3 col-sm-6 col-xs-12">
                <div class="tile-stats">
                  <div class="icon"><i class="fa fa-check-square-o text-info"></i>
                  </div>
                  <div class="count">10</div>

                  <h3>Campaigns</h3>
                </div>
              </div>
              <div class="animated flipInY col-lg-3 col-md-3 col-sm-6 col-xs-12">
                <div class="tile-stats">
                  <div class="icon"><i class="fa fa-envelope-o text-info"></i>
                  </div>
                  <div class="count">3</div>

                  <h3>Email Lists</h3>
                </div>
              </div>
              <div class="animated flipInY col-lg-3 col-md-3 col-sm-6 col-xs-12">
                <div class="tile-stats">
                  <div class="icon"><i class="fa fa-tag text-info"></i>
                  </div>
                  <div class="count">14</div>

                  <h3>Products</h3>
                </div>
              </div>
            </div>

            <div class="row top_tiles" style="margin: 10px 0;">
              <div class="col-md-3 tile">
                <span>Total Emails Sent</span>
                <h2>231,809</h2>
                <span class="sparkline_two" style="height: 160px;"><canvas width="196" height="40" style="display: inline-block; width: 196px; height: 40px; vertical-align: top;"></canvas></span>
              </div>
              <div class="col-md-3 tile">
                <span>Total Emails Opened</span>
                <h2>31,809</h2>
                <span class="sparkline_two" style="height: 160px;"><canvas width="196" height="40" style="display: inline-block; width: 196px; height: 40px; vertical-align: top;"></canvas></span>
              </div>
              <div class="col-md-3 tile">
                <span>Total Email Clicks</span>
                <h2>1,809</h2>
                <span class="sparkline_two" style="height: 160px;"><canvas width="196" height="40" style="display: inline-block; width: 196px; height: 40px; vertical-align: top;"></canvas></span>
              </div>
              <div class="col-md-3 tile">
                <span>Total Revenue</span>
                <h2>$ 1,231,809</h2>
                <span class="sparkline_three" style="height: 160px;"><canvas width="200" height="40" style="display: inline-block; width: 200px; height: 40px; vertical-align: top;"></canvas></span>
              </div>
            </div>

            <br>
          </div>
        </div>
      </div>
    </div>

    <div class="row">

      <div class="col-md-12 col-sm-12 col-xs-12">
        <div class="x_panel">
          <div class="x_title">
            <h2>Triggers</h2>
            <ul class="nav navbar-right panel_toolbox">
              <li><a class="collapse-link"><i class="fa fa-chevron-up"></i></a>
              </li>
              <li class="dropdown">
                <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-expanded="false"><i class="fa fa-wrench"></i></a>
                <ul class="dropdown-menu" role="menu">
                  <li><a href="<%= root_url %>new_campaign">New Campaign</a>
                  </li>
                  <li><a href="#">Settings 2</a>
                  </li>
                </ul>
              </li>
              <li><a class="close-link"><i class="fa fa-close"></i></a>
              </li>
            </ul>
            <div class="clearfix"></div>
          </div>
          <div class="x_content">

          </div>
        </div>
      </div>

    </div>


<% end %>
