<% content_for :javascript do %>
		<script type="text/javascript">
			window.mainPageTitle = 'Main Page';
			ShopifyApp.ready(function () {
				ShopifyApp.Bar.initialize({
					title: window.mainPageTitle,
					icon: '/shopify.png',
					buttons: {
						secondary: {
							label: "Mail-Funnel Home",
							href: "http://docs.shopify.com/embedded-app-sdk",
							target: 'new'
						}
					}
				});
			});
		</script>



<div class="container">
	
	<div class="col-xs-12">
		
		<legend>
			<h1>Campaigns</h1>
		</legend>
		
		<div class="pull-right">
			<a class="btn btn-primary btn-block" href="<%= root_url %>new_campaign">New Campaign</a>
		</div>
		
		<%= render 'campaigns_list' %>
	
	</div>
</div>

<% end %>