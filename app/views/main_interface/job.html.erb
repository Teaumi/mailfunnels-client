<div class="container">
	
	<div class="col-xs-12">
		
		<legend>
			<h1>Job: <%= @job.name %></h1>
		</legend>
		
		<div class="col-xs-12">
			
			<table class="table table-striped">
				
				<!--<tr class="active">-->
					<!--<th><h4>A</h4></th>-->
					<!--<th><h4>Hook</h4></th>-->
					<!--<th></th>-->
				<!--</tr>-->
				
				<tbody>
						<tr>
							<td style="width:15%;"><h6>ID</h6></td>
							<td><h6><%= @job.id %></h6></td>
						</tr>
						<tr>
							<td style="width:15%;"><h6>Subject</h6></td>
							<td><h6><%= @job.subject %></h6></td>
						</tr>
						<tr>
							<td style="width:15%;"><h6>Content</h6></td>
							<td><h6><%= @job.content %></h6></td>
						</tr>
						<tr>
							<td style="width:15%;"><h6>Created</h6></td>
							<td><h6><%= @job.created_at %></h6></td>
						</tr>
						<tr>
							<td style="width:15%;"><h6>Updated</h6></td>
							<td><h6><%= @job.updated_at %></h6></td>
						</tr>
						<tr>
							<td style="width:15%;"><h6>Email List</h6></td>
							<td>
								<h6>
									<%= @job.email_list_id %>
										<%#= EmailList.where(id: @job.email_list_id).first.name != nil %>
								</h6>
							</td>
						</tr>
						<tr>
							<td style="width:15%;"><h6>Executed</h6></td>
							<td><h6><%= @job.executed %></h6></td>
						</tr>
						<tr>
							<td style="width:15%;"><h6>Execute Time</h6></td>
							<td><h6><%= @job.execute_time %> hours</h6></td>
						</tr>
						<tr>
							<td style="width:15%;"><h6>Name</h6></td>
							<td><h6><%= @job.name %></h6></td>
						</tr>						<tr>
							<td style="width:15%;"><h6>Campaign</h6></td>
							<td><h6><%= Campaign.find(@job.campaign_id).name %></h6></td>
						</tr>						<tr>
							<td style="width:15%;"><h6>Last Execute Date</h6></td>
							<td><h6><%= @job.execute_date %></h6></td>
						</tr>
				
				
				</tbody>
			
			</table>
			
			<br>
		
		</div>
	
	
	</div>
</div>