<% content_for :javascript do %>
    <script type="text/javascript">
        window.mainPageTitle = 'Main Page';
        ShopifyApp.ready(function () {
            ShopifyApp.Bar.initialize({
                title: window.mainPageTitle,
                icon: '/shopify.png'
            });
        });
    </script>

    <%= javascript_include_tag 'dashboard_manifest.js' %>
    <%= javascript_include_tag 'components/jquery.tabletoCSV.js' %>
    <%= javascript_include_tag 'pages/allsubscribers.js' %>
    <%= stylesheet_link_tag 'dashboard.css' %>


    <div class="hidden">
      <input id="current_app_id" type="number" value="<%= @app.id %>"/>
      <input id="current_email_list_id" type="number" value="<%= @list.id %>"/>
    </div>


    <div class="row">
      <div class="col-xs-12">
        <div class="page-title">
          <div class="title_left">
            <h3>MailFunnels <small>Subscribers for List</small></h3>
          </div>

          <div class="title_right">
            <button class="btn btn-primary btn-border pull-right" type="button" data-toggle="modal" data-target="#new_batch_email_modal"><i class="fa fa-plus"></i> New Batch Email</button>
            <button id="subscribers_export_button" class="btn btn-primary btn-border pull-right" style="margin-right: 5px;" type="button"><i class="fa fa-download"></i> Export CSV </button>
          </div>

          <hr/>
          <div class="clearfix"></div>
        </div>
      </div>
    </div>

    <hr class="fade-2"/>


    <div class="row">

      <div class="col-md-12 col-sm-12 col-xs-12">
        <div class="x_panel">
          <div class="x_title">
            <h2>Subscribers List</h2>
            <br/>
            <div class="clearfix"></div>
          </div>
          <div class="x_content">
            <!-- Triggers Table -->
            <table id="subscribers_table" class="table table-striped table-bordered text-center">

              <!-- Triggers Table Header -->
              <thead>
              <tr>
                <th class="text-center">First Name</th>
                <th class="text-center">Last Name</th>
                <th class="text-center">Email</th>
                <th class="text-center">Revenue</th>
                <th class="no-sort text-center"><i class="fa fa-trash-o"></i></th>
              </tr>
              </thead>
              <!-- END Hooks Table Header -->

              <!-- Hooks Table BODY -->
              <tbody>

              <% if @subscribers.any? %>
                  <% @subscribers.each do |elsubscriber| %>
                      <tr>
                        <td><h5><%= elsubscriber.subscriber.first_name %></h5></td>
                        <td><h5><%= elsubscriber.subscriber.last_name %></h5></td>
                        <td><h5><%= elsubscriber.subscriber.email %></h5></td>
                        <td><h5><%= number_to_currency(elsubscriber.subscriber.revenue) %>0</h5></td>
                        <td style="width: 50px;">
                          <button type="button" class="btn btn-primary btn-sm"><i class="fa fa-trash-o"></i></button>
                        </td>

                      </tr>
                  <% end %>
              <% end %>
              </tbody>
              <!-- END Hooks Table BODY -->

            </table>
            <!-- END Hooks Table -->
          </div>
        </div>
      </div>

    </div>


    <div id="new_subscriber_modal" class="modal fade bs-example-modal-sm">
      <div class="modal-dialog modal-md">
        <div class="modal-content">

          <div class="modal-header">
            <button type="button" class="close" data-dismiss="modal"><span aria-hidden="true">×</span>
            </button>
            <h4 class="modal-title" id="myModalLabel">Add New Subscriber</h4>
          </div>

          <form class="form-horizontal form-label-left">

            <div class="modal-body">

              <div class="form-group">
                <label class="control-label col-md-3 col-sm-3 col-xs-12">First Name</label>
                <div class="col-md-9 col-sm-9 col-xs-12">
                  <input id="first_name_input" type="text" class="form-control" placeholder="First Name">
                </div>
              </div>

              <div class="form-group">
                <label class="control-label col-md-3 col-sm-3 col-xs-12">Last Name</label>
                <div class="col-md-9 col-sm-9 col-xs-12">
                  <input id="last_name_input" type="text" class="form-control" placeholder="Last Name">
                </div>
              </div>

              <div class="form-group">
                <label class="control-label col-md-3 col-sm-3 col-xs-12">Email Address</label>
                <div class="col-md-9 col-sm-9 col-xs-12">
                  <input id="email_input" type="email" class="form-control" placeholder="Email Address">
                </div>
              </div>


            </div>

            <div class="modal-footer">
              <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
              <button type="reset" class="btn btn-primary">Reset</button>
              <button id="new_subscriber_submit_button" type="button" class="btn btn-success">Submit</button>
            </div>

          </form>

        </div>
      </div>
    </div>




    <!--Start New Batch Email Modal-->

    <div id="new_batch_email_modal" class="modal fade bs-example-modal-sm">
      <div class="modal-dialog modal-md">
        <div class="modal-content">

          <div class="modal-header">
            <button type="button" class="close" data-dismiss="modal"><span aria-hidden="true">×</span>
            </button>
            <h4 class="modal-title" id="myModalLabel">New Batch Email</h4>
          </div>

          <form class="form-horizontal form-label-left">

            <div class="modal-body">

              <div class="form-group">
              <label class="control-label col-md-3 col-sm-3 col-xs-12">Email List</label>
              <div class="col-md-9 col-sm-9 col-xs-12">
                <h4 id="email_list_name"><%= @list.name %></h4>
              </div>
            </div>


              <div class="form-group">
                <label class="control-label col-md-3 col-sm-3 col-xs-12">Email Template</label>
                <div class="col-md-9 col-sm-9 col-xs-12">
                  <select class="form-control" id="template_list_select">
                    <% @templates.each do |t| %>
                        <option value="<%= t.id %>"><%= t.name %></option>
                    <% end %>
                  </select>
                </div>
              </div>


            </div>

            <div class="modal-footer">
              <button id="batch_email_send_button" type="button" class="btn btn-success">Send</button>
            </div>

          </form>

        </div>
      </div>
    </div>

    <!--End New Batch Email Modal-->


<% end %>



