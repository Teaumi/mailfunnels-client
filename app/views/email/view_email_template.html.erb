
<% content_for :javascript do %>
    <script type="text/javascript">
        window.mainPageTitle = 'Main Page';
        ShopifyApp.ready(function () {
            ShopifyApp.Bar.initialize({
                title: window.mainPageTitle,
                icon: '/shopify.png'
            });
            function goBack() {
                window.history.back();
            }
        });
    </script>

    <%= javascript_include_tag 'pages/emailtemplates.js' %>
    <%= stylesheet_link_tag 'EmailTemplate/simple.css' %>


    <div class="hidden">
      <input id="current_app_id" type="number" value="<%= @app.id %>"/>
    </div>


    <div class="page-title email_info">
      <div class="title_left">
        <h3>Email View <small><%= @template.name %></small></h3>
        <h2><%= @template.description %></h2>
      </div>



      <hr/>
      <div class="clearfix"></div>
    </div>

    <!-- Message start -->
    <div class="row emailcontent">

      <table class="body-wrap">
        <tr>
          <td class="container">


            <table>
              <tr>
                <td align="center" class="masthead">

                  <h1><%= @template.email_subject %></h1>

                </td>
              </tr>
              <tr>
                <td class="content">

                  <h2>Hi {{ customer.first_name + customer.last_name }},</h2>

                  <p> <%= @template.email_content %></p>

                  <table>
                    <tr>
                      <td align="center">
                        <p>
                          <a href="<%= @template.button_url %>" class="button"> <%= @template.button_text %> </a>
                        </p>
                      </td>
                    </tr>
                  </table>
                </td>
              </tr>
            </table>

          </td>
        </tr>
        <tr>
          <td class="container">


            <!--Need to include unsubscribe link-->
            <table>
              <tr>
                <td class="content footer" align="center">
                  <p><a href= "#">Unsubscribe</a></p>
                </td>
              </tr>
            </table>

          </td>
        </tr>
      </table>

    </div>








    </div>



   <!--Button redirects to Mail funnels/email templates page-->
    <div class="modal-footer">
      <button class="btn btn-default" onclick="goBack()">Done</button>
    </div>

    </form>

    </div>
    </div>
    </div>

<% end %>
