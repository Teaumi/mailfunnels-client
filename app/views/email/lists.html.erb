
<div class="col-xs-12">

	<div class="page-title">
		<div class="title_left">
			<h3>Email Lists</h3>
		</div>

		<div class="title_right">
			<button class="btn btn-primary pull-right" type="button" data-toggle="modal" data-target="#newEmailTemplateModal"><i class="fa fa-plus"></i> New Funnel</button>
		</div>

		<hr/>
		<div class="clearfix"></div>
	</div>

	<!-- Email Lists -->
	<div class="row">

		<!-- START FUNNEL PANEL -->
		<!-- ~~~~~~~~~~~~~~~~~~ -->
		<div class="col-md-3 col-xs-12 widget widget_tally_box">
			<div class="x_panel fixed_height_300">
				<div class="x_content">

					<h3 class="name">All Subscribers</h3>

					<div class="flex">
						<ul class="list-inline count2">
							<li>

							</li>
							<li>
								<h3>1</h3>
								<span>Subscribers</span>
							</li>
							<li>
							</li>
						</ul>
					</div>
					<br/>
					<div class="flex">
						<div class="col-xs-6">
							<a href="<%= root_url %>all_subscribers" class="btn btn-block btn-primary">View</a>
						</div>

						<div class="col-xs-6">
							<button class="btn btn-block btn-primary">Edit</button>
						</div>
					</div>

				</div>
			</div>


		</div>
		<!-- ~~~~~~~~~~~~~~~~ -->
		<!-- END FUNNEL PANEL -->


	</div>

	<div id="newEmailTemplateModal" class="modal fade bs-example-modal-sm">
		<div class="modal-dialog modal-md">
			<div class="modal-content">

				<div class="modal-header">
					<button type="button" class="close" data-dismiss="modal"><span aria-hidden="true">Ã—</span>
					</button>
					<h4 class="modal-title" id="myModalLabel">Create New Email List</h4>
				</div>

				<form class="form-horizontal form-label-left">

					<div class="modal-body">

						<div class="form-group">
							<label class="control-label col-md-3 col-sm-3 col-xs-12">Template Name</label>
							<div class="col-md-9 col-sm-9 col-xs-12">
								<input id="template_name_input" type="text" class="form-control" placeholder="Template Name">
							</div>
						</div>

						<div class="form-group">
							<label class="control-label col-md-3 col-sm-3 col-xs-12">Template Description
							</label>
							<div class="col-md-9 col-sm-9 col-xs-12">
								<textarea id="template_description_input" class="form-control" rows="3" placeholder="Template Description"></textarea>
							</div>
						</div>


						<div class="form-group">
							<label class="control-label col-md-3 col-sm-3 col-xs-12">Template Email Subject
							</label>
							<div class="col-md-9 col-sm-9 col-xs-12">
								<textarea id="template_email_subject_input" class="form-control" rows="3" placeholder="Template Email Subject"></textarea>
							</div>
						</div>

						<div class="form-group">
							<label class="control-label col-md-3 col-sm-3 col-xs-12">Template Email Content
							</label>
							<div class="col-md-9 col-sm-9 col-xs-12">
								<textarea id="template_email_content_input" class="form-control" rows="3" placeholder="Template Email Content"></textarea>
							</div>
						</div>



					</div>

					<div class="modal-footer">
						<button id="new_trigger_submit_button" type="button" class="btn btn-success">Submit</button>
					</div>

				</form>

			</div>
		</div>
	</div>








</div>