<% content_for :javascript do %>
    <script type="text/javascript">
        window.mainPageTitle = 'Main Page';
        ShopifyApp.ready(function () {
            ShopifyApp.Bar.initialize({
                title: window.mainPageTitle,
                icon: '/shopify.png'
            });
            function goBack() {
                window.history.back();
            }
        });
    </script>

    <%= javascript_include_tag 'pages/editemailtemplate.js' %>
    <%= stylesheet_link_tag 'EmailTemplate/simple.css' %>

    <div class="hidden">
      <input id="current_template_id" type="number" value="<%= @template.id %>"/>
      <input id="current_content_value" type="text" value="<%= @template.email_content %>"/>
      <% if @template.has_button %>
          <input id="show_button_value" type="number" value="1"/>
      <% else %>
          <input id="show_button_value" type="number" value="0"/>
      <% end %>
    </div>

    <div class="row">
      <div class="col-xs-12">
        <div class="page-title">
          <div class="title_left">
            <h3>MailFunnels <small>Edit <%= @template.name %></small></h3>
          </div>

          <hr/>
          <div class="clearfix"></div>
        </div>
      </div>
    </div>

    <hr class="fade-2"/>


    <div class="row">
      <div class="col-xs-12">

        <!--Start EmailEdit div-->
        <div class="col-xs-12 col-md-5">



          <div class="col-xs-12">

            <form class="form-horizontal form-label-left">


              <h3 class="text-primary">Edit Email</h3>

              <hr class="fade-2"/>

              <div class="form-group">
                <label class="control-label col-md-3 col-sm-3 col-xs-12">Email Subject</label>
                <div class="col-md-9 col-sm-9 col-xs-12">
                  <input id="email_subject_input" type="text" value="<%= @template.email_subject %>" class="form-control" placeholder="Email Subject">
                </div>
              </div>

              <div class="form-group">
                <label class="control-label col-md-3 col-sm-3 col-xs-12">Email Title</label>
                <div class="col-md-9 col-sm-9 col-xs-12">
                  <input id="emailTitleInput" type="text" value="<%= @template.email_title %>" class="form-control" placeholder="Email Title">
                </div>
              </div>

              <div class="form-group">
                <label class="control-label col-md-3 col-sm-3 col-xs-12">Email Content
                </label>
                <div class="col-md-9 col-sm-9 col-xs-12">
                  <textarea id="email_content_input" class="form-control" rows="4"  placeholder="Email Content"></textarea>
                </div>
              </div>

              <div class="form-group">
                <label class="control-label col-md-3 col-sm-3 col-xs-12">Show Button</label>
                <div class="col-md-9 col-sm-9 col-xs-12">
                  <select class="form-control" id="button_select">
                    <option value="false">No</option>
                    <option value="true">Yes</option>
                  </select>
                </div>
              </div>


              <div id="button_forms_div">

                <div class="form-group">
                  <label class="control-label col-md-3 col-sm-3 col-xs-12">Button Text
                  </label>
                  <div class="col-md-9 col-sm-9 col-xs-12">
                    <input id="buttonTextInput" type="text" value="<%= @template.button_text %>" class="form-control" placeholder="Button Text">
                  </div>
                </div>

                <div class="form-group">
                  <label class="control-label col-md-3 col-sm-3 col-xs-12">Button URL
                  </label>
                  <div class="col-md-9 col-sm-9 col-xs-12">
                    <input id="buttonUrlInput" type="text" value="<%= @template.button_url %>" class="form-control" placeholder="Button Url">
                  </div>
                </div>
              </div>

              <hr class="fade-2"/>

              <div class="row">
                <div class="col-xs-8 col-xs-offset-2">
                  <button id="email_list_submit_button" type="button" class="btn btn-block btn-border btn-success">Save</button>
                </div>
              </div>

            </form>

          </div>

        </div>

        <!-- START EMAIL PREVIEW -->
        <!-- ~~~~~~~~~~~~~~~~~~~ -->
        <div class="col-xs-12 col-md-7">
          <div class="email_content">

            <table class="body-wrap">
              <tr>
                <td class="container">

                  <table>
                    <tr>
                      <td align="center" class="email_title">

                        <h1 id="printEmailTitle" class="email_template"></h1>

                      </td>
                    </tr>
                    <tr>
                      <td class="content">

                        <h2>Hi Customer,</h2>

                        <p id="printEmailContent"></p>

                        <table>
                          <tr>
                            <td align="center">
                              <div id="preview_buttons_div">
                                <p>
                                  <a href="#" class="button " id="printButtonText"></a>
                                </p>
                              </div>
                            </td>
                          </tr>
                        </table>
                      </td>
                    </tr>
                  </table>
                </td>
              </tr>

              <tr>
                <td class="container email_footer">

                  <!--Need to include unsubscribe link-->
                  <table>
                    <tr>
                      <td class="content email_footer" align="center">
                        <p><a href= "#">Unsubscribe</a></p>
                      </td>
                    </tr>
                  </table>

                </td>
              </tr>
            </table>

          </div>
        </div>
        <!-- ~~~~~~~~~~~~~~~~~ -->
        <!-- END EMAIL PREVIEW -->

      </div>
    </div>


<% end %>