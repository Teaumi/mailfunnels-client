<p id="notice"><%= notice %></p>

<h1>Triggers</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Description</th>
      <th>Emailsubject</th>
      <th>Emailcontent</th>
      <th>Num times triggered</th>
      <th>Num emails sent</th>
      <th>Delaytime</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @triggers.each do |trigger| %>
      <tr>
        <td><%= trigger.name %></td>
        <td><%= trigger.description %></td>
        <td><%= trigger.emailSubject %></td>
        <td><%= trigger.emailContent %></td>
        <td><%= trigger.num_times_triggered %></td>
        <td><%= trigger.num_emails_sent %></td>
        <td><%= trigger.delayTime %></td>
        <td><%= link_to 'Show', trigger %></td>
        <td><%= link_to 'Edit', edit_trigger_path(trigger) %></td>
        <td><%= link_to 'Destroy', trigger, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Trigger', new_trigger_path %>
