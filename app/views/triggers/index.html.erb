<% content_for :javascript do %>
    <script type="text/javascript">
        window.mainPageTitle = 'Main Page';
        ShopifyApp.ready(function () {
            ShopifyApp.Bar.initialize({
                title: window.mainPageTitle,
                icon: '/shopify.png'
            });
        });
    </script>

    <%= javascript_include_tag 'triggers_manifest.js' %>
    <%= stylesheet_link_tag 'dashboard.css' %>

    <div class="hidden">
      <input id="current_app_id" type="number" value="<%= @app_id %>"/>
    </div>


    <div class="page-title">
      <div class="title_left">
        <h3>Triggers</h3>
      </div>

      <div class="title_right">
        <button class="btn btn-primary pull-right" type="button" data-toggle="modal" data-target="#newTriggerModal"><i class="fa fa-plus"></i> New Trigger</button>
      </div>

      <hr/>
      <div class="clearfix"></div>
    </div>
    
    <div class="row">

      <div class="col-md-12 col-sm-12 col-xs-12">
        <div class="x_panel">
          <div class="x_title">
            <h2>Triggers</h2>
            <div class="clearfix"></div>
          </div>
          <div class="x_content">
            <!-- Triggers Table -->
            <table id="triggers_table" class="table table-striped">

              <!-- Triggers Table Header -->
              <thead>
              <tr class="active">
                <th>Name</th>
                <th>Hits</th>
                <th>Emails Sent</th>
                <th>Email List</th>
                <th class="no-sort"><h5></h5></th>
              </tr>
              </thead>
              <!-- END Hooks Table Header -->

              <!-- Hooks Table BODY -->
              <tbody>

              <% if @triggers %>
                  <% @triggers.each do |trigger| %>
                      <tr>
                        <td style="width:40%;"><%= trigger.name %></td>
                        <td><%= trigger.ntriggered %></td>
                        <td><%= trigger.nesent %></td>
                        <td>Default</td>
                        <td style="width:35px;">
                          <div class="btn-group">
                            <button type="button" class="btn btn-primary btn-block dropdown-toggle" data-toggle="dropdown" aria-expanded="false">
                              <span class="caret"></span>
                            </button>
                            <ul class="dropdown-menu pull-right">
                              <li><a href="<%= root_url %>">Funnel Builder</a></li>
                              <li><a href="<%= root_url %>">View Jobs</a></li>
                            </ul>
                          </div>

                        </td>

                      </tr>
                  <% end %>
              <% end %>
              </tbody>
              <!-- END Hooks Table BODY -->

            </table>
            <!-- END Hooks Table -->
          </div>
        </div>
      </div>

    </div>


    <div id="newTriggerModal" class="modal fade bs-example-modal-sm">
      <div class="modal-dialog modal-md">
        <div class="modal-content">

          <div class="modal-header">
            <button type="button" class="close" data-dismiss="modal"><span aria-hidden="true">Ã—</span>
            </button>
            <h4 class="modal-title" id="myModalLabel">Create New Trigger</h4>
          </div>

          <form class="form-horizontal form-label-left">

            <div class="modal-body">

              <div class="form-group">
                <label class="control-label col-md-3 col-sm-3 col-xs-12">Trigger Name</label>
                <div class="col-md-9 col-sm-9 col-xs-12">
                  <input id="trigger_name_input" type="text" class="form-control" placeholder="Trigger Name">
                </div>
              </div>

              <div class="form-group">
                <label class="control-label col-md-3 col-sm-3 col-xs-12">Trigger Description
                </label>
                <div class="col-md-9 col-sm-9 col-xs-12">
                  <textarea id="trigger_description_input" class="form-control" rows="3" placeholder="Description For Trigger"></textarea>
                </div>
              </div>

              <div class="form-group">
                <label class="control-label col-md-3 col-sm-3 col-xs-12">Email Subject</label>
                <div class="col-md-9 col-sm-9 col-xs-12">
                  <textarea id="trigger_email_subject_input" type="text" class="form-control" placeholder="Email Subject"></textarea>
                </div>
              </div>

              <div class="form-group">
                <label class="control-label col-md-3 col-sm-3 col-xs-12">Email Content</label>
                <div class="col-md-9 col-sm-9 col-xs-12">
                  <textarea id="trigger_email_content_input" type="text" class="form-control" placeholder="Email Content"></textarea>
                </div>
              </div>


              <div class="form-group">
                <label class="control-label col-md-3 col-sm-3 col-xs-12">Email List</label>
                <div class="col-md-9 col-sm-9 col-xs-12">
                  <select class="form-control" id="email_list_select">
                    <% @lists.each do |el| %>
                        <option value="<%= el.id %>"><%= el.name %></option>
                    <% end %>
                  </select>
                </div>
              </div>

              <div class="form-group">
                <label class="control-label col-md-3 col-sm-3 col-xs-12">Hook List</label>
                <div class="col-md-9 col-sm-9 col-xs-12">
                  <select class="form-control" id="hook_list_select">
                    <% @hookslist.each do |hl| %>
                        <option value="<%= hl.id %>"><%= hl.name %></option>
                    <% end %>
                  </select>
                </div>
              </div>

              <div class="form-group">
                <label class="control-label col-md-3 col-sm-3 col-xs-12">Delay Time</label>
                <div class="col-md-9 col-sm-9 col-xs-12">
                  <input id="delay_time_input" type="number" class="form-control" placeholder="Delay Time"></input>
                </div>
              </div>




            </div>

            <div class="modal-footer">
              <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
              <button type="reset" class="btn btn-primary">Reset</button>
              <button id="new_trigger_submit_button" type="button" class="btn btn-success">Submit</button>
            </div>

          </form>

        </div>
      </div>
    </div>

<% end %>



