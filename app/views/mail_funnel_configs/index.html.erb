<h1>Mail Funnel Configs</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Value</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @mail_funnel_configs.each do |mail_funnel_config| %>
      <tr>
        <td><%= mail_funnel_config.name %></td>
        <td><%= mail_funnel_config.value %></td>
        <td><%= link_to 'Show', mail_funnel_config %></td>
        <td><%= link_to 'Edit', edit_mail_funnel_config_path(mail_funnel_config) %></td>
        <td><%= link_to 'Destroy', mail_funnel_config, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

